{% extends "base.njk" %}
{% block head %}
<title>Jebaited</title>
{% endblock %}
{% block css %}
<link rel="stylesheet" type="text/css" href="css/style.css">
{% endblock %}
{% block jsincludes %}
<script src="js/nunjucks.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block prebody %}
{{ flashy() | safe}}
{% endblock %}
{% block header %}
<div class="title">Jebaited</div>
{% endblock %}
{% block main %}
<div class="container">
  <form class="form" action="/upload" enctype="multipart/form-data" method="post">
    <input type="text" name="command" placeholder="Name of Your Command"><br>
    <div class="fileUpload">
      <span>Select Your File</span>
      <input type="file" name="file" class="upload" />
    </div><br>
    <input type="submit" value="Upload">
  </form>
</div>
{% endblock %}
{% block js %}
<script>
  $( document ).ready(function() {
      $('.flash-info').parent().css("background-color", "blue");
      $('.flash-error').parent().css("background-color", "red");
      $('.flash-success').parent().css("background-color", "green");
  });
</script>
{% endblock %}
</body>
</html>
